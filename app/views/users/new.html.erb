<h1>Sign Up</h1>

<%= form_with(model: @user, url: users_path, method: :post) do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %><br>

  <%= form.label :email %>
  <%= form.email_field :email %><br>

  <%= form.label :password %>
  <%= form.password_field :password%><br>

  <%= form.submit "Sign Up" %>
<% end %>